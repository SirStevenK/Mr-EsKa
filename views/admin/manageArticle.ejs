<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Gestion des articles - Mr. EsKa</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Acme|Oswald|Permanent+Marker" rel="stylesheet">
        <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/card.css" />
        <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/button.css" />
        <link rel="stylesheet" type="text/css" media="screen" href="/stylesheets/manageArticle.css" />
    </head>
    <body>
        <section id="main">
            <div id="main-top">
                <a href="/admin/menu" style="cursor: pointer;grid-column: 1;"><img src="/images/backicon.png"></a>
                <p style="font-family: Permanent Marker; font-size: 24px;justify-self: center;">Gestion des articles</p>
            </div>
            <div id="print-articles">
                    <% for ( let i = 0; i < articles.length; i++) { %>
                        <div class="article-element">
                            <%- include('../../partials/card', {url: "/admin/modifArticle?id=" + articles[i].id, image: articles[i].image, title: articles[i].title, description: articles[i].description}); %>
                            <form action="/admin/manageArticle" method="POST" id="send">
                                <button name="suppr" type="button" class="button-input bg-bi-orange" onclick="deleteArticle(this)">Supprimer</button>
                                <input name="id"value="<%= articles[i].id %>" style="display:none;">
                            </form>
                        </div>
                    <% } %>
            </div>
        </section>
    </body>
</html>
<script>
    function deleteArticle(element) {
        if (confirm("Voulez-vous vraiment supprimer cet article ?")) element.parentElement.submit();
    }
</script>